{
  "manifest_version": 2,
  "name": "resize_window",
  "version": "1.0",
  "description": "Resize Window",
	"browser_action": {
		"default_title": "Resize Window",
		"default_popup": "popup.html"
	},
  "background": {
    "scripts": [
      "js/status.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "unlimitedStorage",
    "storage",
    "contextMenus",
    "notifications"
  ],
  "icons": {
    "16": "images/icon16.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    },
    {
      "matches": ["*://localhost/*"],
      "js": ["js/iter.js"]
    }
  ],
  "omnibox": { "keyword" : "mx" }
}